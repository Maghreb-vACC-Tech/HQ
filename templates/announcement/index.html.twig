{% extends 'base.html.twig' %}

{% block title %}Hello AnnouncementController!{% endblock %}

{% block body %}
<style>    
{# Announcement Styles #}

        .Announcement-Container-Header{
                width: 90%;
                height:10vh;
                margin: auto;
                }        
        .Announcement-Container-Header > a {
                float: left;
                translate: 80vw 5vh;
        }        
        .Announcement-Container-Header > * {
                float: left;
        }
        

        
      .Announcement{
          width:87vw;
          height:auto;
          background-color: #6F9FA4;    
          margin:auto;
          border-radius:5px;
          color:white;
          box-shadow: 15px 15px 15px #D6D6D6;
          margin-top:5vh;
          padding-bottom:5vh;
      }
      
      .Announcement-Online-Container{
          width:100%;
          margin:auto;
          height:7vh;
      }

      .Announcement-Online-Content > div {
        float:left;
        padding-top:3vh;
        text-align:center;
      }

      .Announcement-Online-Content > div > h1{
        float:left;
        font-size:3vh;
        translate: 9vw;
      }

      .Announcement-Online-Content > div > span{
        float:right;
        font-size:2vh;
        translate: -9vw;
      }

      
      .Announcement-Online-Content > div > h2{
        float:left;
        font-size:2vh;
        translate: 2vw;
        text-align:left;
      }

      .Announcement-Online-Content > div > p{
        font-size:2vh;
        width:80%;
        height:70%;
        margin:auto;
        text-align:left;
      }

</style>

<div class="Announcement-Container">

        <div class="Announcement-Container-Header">
                <a type="button" class="btn btn-outline-primary" href="/announcement/add/">Add</a>
        </div>

        {% for announcement in announcements %}
            <div class="Announcement">
                
                <h1 style="font-size:3vh;text-align:center;padding:3vh;">{{announcement.subject}}</h1>
                
                <a style="float:right; translate: -5vw -5vh; color:white;" href="/announcement/delete/{{announcement.id}}"><i class="fa-regular fa-trash-can"></i></a>
                

                
                        <div class="Announcement-Online-Container"  style="width:100%;height:38vh;overflow-y:auto;overflow-x:hidden;margin:auto">
                                <div class="Announcement-Online-Content"  style="width:100%;min-height:10vh;height:auto;">
                                        <div style="width:100%;"><h1>{{announcement.name}}</h1><span>{{announcement.date}}</span></div>
                                        <div style="width:100%;">
                                                <p>
                                                Hello Everyone,</br>
                                                        {{announcement.message}}
                                                </p>

                                        </div>
                                </div>
                        </div>

                </div>
        {% endfor %}


</div>
{% endblock %}
